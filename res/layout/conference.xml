<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="100"
    android:orientation="vertical" >
    
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="392dp" 
    android:layout_weight="100">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="332dp"
        android:orientation="vertical" >

        <TextView
        android:id="@+id/conftitle_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Title"
        android:textSize="20dip" />

    <EditText
        android:id="@+id/confedView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title" />

      <TextView
        android:id="@+id/confpage_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Page Number" 
        android:textSize="20dip"/>
    <EditText 
        android:id="@+id/confpage_no_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter pageno"
        android:inputType="numberDecimal"
     />
      <Button
        android:id="@+id/conf_loc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:text="Conference Location" 
        android:textSize="20dip"/>
      <Button
        android:id="@+id/conf_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Conference Date" 
           android:gravity="left"
        android:textSize="20dip"/>
      <Button
        android:id="@+id/conf_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Conference Time" 
           android:gravity="left"
        android:textSize="20dip"/>
     <TextView
        android:id="@+id/confyop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Year Of Publication" 
        android:textSize="20dip"/>
    <EditText 
        android:id="@+id/confyop_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter YOP"
        android:inputType="numberDecimal"
     />
     <TextView
        android:id="@+id/confyop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ISBN" 
        android:textSize="20dip"/>
    <EditText 
        android:id="@+id/confisbn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ISBN Number"
        android:inputType="numberDecimal"
     />

  <TextView
        android:id="@+id/confno_of_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="No.of Authors" 
        android:textSize="20dip"/>
    <EditText 
        android:id="@+id/confno_of_auth_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Authors No"
        android:inputType="numberDecimal"
     />
    <TextView 
        android:id="@+id/conmauth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aru You Main Author?"
        android:textSize="20dip"
        />
    <RadioGroup
        android:id="@+id/confmainauth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RadioButton
            android:id="@+id/conmyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Yes" 
            android:layout_weight="50"/>

        <RadioButton
            android:id="@+id/confmno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" 
            android:layout_weight="50"/>

      
    </RadioGroup>
    
    
     </LinearLayout>
    </ScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/confaccessGraphe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:onClick="selfDestruct"
            
            android:text="Save" />

        <Button
            android:id="@+id/confaccessGraphe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:onClick="selfDestruct"
            
            android:text="Cancel"
             />

        <Button
            android:id="@+id/confaccessGraphe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:onClick="selfDestruct"
            
            android:text="Delete" />
    </LinearLayout>

</LinearLayout>